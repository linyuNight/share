@import "~common/stylus/mixin"

.tab{
  bordertop-1px($grey)
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:50px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  z-index:100;
  background:#fff;
  // -webkit-backdrop-filter: blur(10px); /* Safari for macOS & iOS*/
  // backdrop-filter: blur(10px); /* Google Chrome */
  // background: rgba(255, 255, 255, 0.8);
  // background:#fff;
  // .background{
  //   position: absolute
  //   left: 0
  //   top: 0
  //   width: 100%
  //   height: 45px
  //   z-index: 200
  //   opacity: 0.6
  //   filter: blur(20px)
  // }
  .tab-item{
    flex:1;
    height:50px;
    
    .tab-item-pic{
      margin:7px auto 5px;
      width:20px;
      height:20px;
      background-position:center;
      background-size:contain;
      background-repeat:no-repeat;
    }
    .tab-item-pic1{
      background-image:url(../../common/image/tab/share.png);
    }
    .tab-item-pic2{
      background-image:url(../../common/image/tab/ranking.png);
    }
    .tab-item-pic3{
      background-image:url(../../common/image/tab/personal.png);
    }
    .tab-item-text{
      text-align:center;
      font-size:12px;
      color:#424242;
    }
  }
  .router-link-exact-active{
    .tab-item-pic1{
      background-image:url(../../common/image/tab/share2.png);
    }
    .tab-item-pic2{
      background-image:url(../../common/image/tab/ranking2.png);
    }
    .tab-item-pic3{
      background-image:url(../../common/image/tab/personal2.png);
    }
    .tab-item-text{
      color:$red;
    }
  }
}