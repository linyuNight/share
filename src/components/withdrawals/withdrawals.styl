@import "~common/stylus/mixin"

.withdrawals{
  position:absolute; 
  width:100%;
  z-index:200;
  padding-bottom:50px;
  background:#f2f2f2;
  .withdrawals-top{
    width:100%;
    height:80px;
    padding:0 15px;
    vertical-align:middle;
    bg('../../common/image/user-center/prifit-record-bg.png');
    .withdrawals-top-text{
      font-size:16px;
      color:#fff;
    }
    .withdrawals-top-money{
      line-height:80px;
      font-size:25px;
      color:#fff;
      margin-right:4px;
    }
    .withdrawals-top-moneytext{
      font-size:16px;
      color:#fff;
    }
  }
  .withdrawals-note{
    font-size:12px;
    color:$red;
    height:31px;
    line-height:31px;
    margin-bottom:30px;
    padding:0 15px;
  }
  .withdrawals-input-list{
    width:100%;
    background:#fff;
    padding:0 15px;
    margin-bottom:24px;
    .withdrawals-input-item{
      borderbottom-1px($grey)
      width:100%;
      height:50px;
      flex-between();
      .withdrawals-input-item-left{
        width:103px;
        font-size:13px;
        color:#000;
      }
      .withdrawals-input-item-right{
        width:calc(100% - 103px);
        font-size:13px;
      }
      &:last-child{
        &:after{
          border-top:none;
        }
      }
    }
  }
  .bottom-btn{
    margin:0 auto;
    width:130px;
    height:40px;
    border:1px solid $red;
    border-radius:3px;
    text-align:center;
    line-height:40px;
    color:$red;
    font-size:16px;
    background:#fff;
  }
}