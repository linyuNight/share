@import "~common/stylus/mixin"

.profit-record{
  position:absolute; 
  width:100%;
  height:100%;
  z-index:200;
  background:#f2f2f2;
  .profit-record-top{
  	position:fixed;
  	left:0;
  	top:0;
  	z-index:300;
  	bg('../../common/image/user-center/prifit-record-bg.png');
  	flex-between();
  	width:100%;
  	height:100px;
  	.profit-record-top-left{
  		height:60px;
  		borderright-1px($grey)
  		flex:1;
  		flex-column();
  		.profit-record-top-left-money{
  			font-size:30px;
  			color:#fff;
  		}
  		.profit-record-top-left-text{
  			font-size:14px;
  			color:#fff;
  		}
  	}
  	.profit-record-top-right{
  		height:60px;
  		flex:1;
  		flex-column();
  		.profit-record-top-right-money{
  			font-size:30px;
  			color:#fff;
  		}
  		.profit-record-top-right-text{
  			font-size:14px;
  			color:#fff;
  		}
  	}
  }
  .profit-record-tab{
  	position:fixed;
  	left:0;
  	top:100px;
  	z-index:300;
  	width:100%;
  	height:43px;
  	padding:0 15px;
  	background:#fff;
  	flex-between();
  	.profit-record-tab-item{
  		flex:1;
  		height:33px;
  		font-size:14px;
  		color:#000;
  		text-align:center;
  		.profit-record-tab-item-text{
  			display:inline-block;
  			height:33px;
  			line-height:33px;
  		}
  	}
  	.profit-record-tab-item-active{
  		.profit-record-tab-item-text{
  			font-weight:bold;
  			border-bottom:2px solid $red;
  		}
  	}
  }
  .click-refurn-list{
  	padding-top:151px;
  	.click-refurn-item{
  		flex-between();
  		width:100%;
  		height:40px;
  		padding:0 15px;
  		background:#fff;
  		font-size:0;
  		margin-bottom:8px;
  		.click-refurn-item-left{
  			width:30%;
  			font-size:14px;
  		}
  		.click-refurn-item-center{
  			width:44%;
  			.click-refurn-item-left{
  				font-size:13px;
  				color:#666666;
  				margin-right:13px;
  			}
  			.click-refurn-item-money{
  				font-size:16px;
  				color:$red;
  				margin-right:5px;
  			}
  			.click-refurn-item-right{
  				font-size:13px;
  				color:$red;
  			}
  		}
  		.click-refurn-item-right{
  			width:24%;
  			font-size:13px;
  			color:#000;
  		}
  	}
  }
  .order-refrun-list{
  	width:100%;
  	padding-top:151px;
	  .order-refrun-item{
	  	width:100%;
	  	height:109px;
	  	padding:0 15px;
	  	background:#fff;
	  	margin-bottom:8px;
	    .order-refrun-item-top{
	    	borderbottom-1px($grey)
	    	flex-between();
	    	height:40px;
	      .order-refrun-item-top-left{
	      	font-size:14px;
	      	color:#000;
	      }
	      .order-refrun-item-top-right{
	      	font-size:13px;
	      	color:$red;
	      }
	    }
	    .order-refrun-item-bottom{
	    	width:100%;
	    	padding:15px 0;
	    	height:69px;
	    	flex-column();
	    	.order-text{
        	font-size:13px;
        	color:#666;
        	margin-right:15px;
        }
        .order-money{
        	font-size:16px;
        	color:#000;
        	margin-right:5px;
        }
        .order-moneytext,.order-time{
        	font-size:13px;
        	color:#000;
        }
	      .order-refrun-item-bottom-top{
	      	width:100%;
	      	flex-between();
	        .order-refrun-item-bottom-top-left{
	        	width:58%;
	        }
	        .order-refrun-item-bottom-top-right{
	        	width:42%;
	        }
	      }
	      .order-refrun-item-bottom-bottom{
	      	width:100%;
	      	flex-between();
	        .order-refrun-item-bottom-bottom-left{
	        	width:58%;
	        }
	        .order-refrun-item-bottom-bottom-right{
	        	width:42%;
	          .order-money{
	          	color:$red;
	          }
	          .order-moneytext{
	          	color:$red;
	          }
	        }
	      }
	    }
	  }
	  
	  .order-refrun-item-disable div,.order-refrun-item-disable span{
	  	color:#666!important;
	  }
  }

  .empty-page{
    position:relative;
    width:100%;
    height:100%;
    overflow:hidden;
    padding-top:143px;
    .empty-round{
      position:absolute;
      left:50%;
      top:173px;
      width:880px;
      height:880px;
      margin-left:-440px;
      border-radius:50%;
      background:#fff;
      z-index:-1;
    }
    .empty-icon{
      margin:91px auto 29px;
      width:110px;
      height:143px;
      bg('../../common/image/empty/record_empty.png');
    }
    .text-contain{
      width:100%;
      height:82px;
      .empty-text1{
        text-align:center;
        font-size:14px;
        color:#666666;
        height:26px;
        line-height:26px;
      }
      .empty-text2{
        text-align:center;
        font-size:12px;
        color:#000;
        height:23px;
        line-height:23px;
      }
    }
    .link-btn{
      margin:0 auto;
      width:84px;
      height:35px;
      line-height:35px;
      border-radius:3px;
      border:1px solid $red;
      text-align:center;
      font-size:16px;
      color:$red;
    }
  }
  .empty-bg-bottom{
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    height:30%;
    background:#fff;
  }
}