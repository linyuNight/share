@import "~common/stylus/mixin"

.main-mask{
  position:fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  background:rgba(0,0,0,.5);
  z-index:1000;
  display: flex;
  align-items: center;
  justify-content: center;
  // width:100%;
  // height:100%;
  // z-index:0;
  // background:#f2f2f2;
  .main-mask-contain{
    max-width:80%;
    .main-mask-content{
      background:rgba(0,0,0,.8);
      padding:10px 12px;
      border-radius:5px;
      color:#fff;
      font-size:16px;
    }
  }
}