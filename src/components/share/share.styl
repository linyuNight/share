@import "~common/stylus/mixin"

.share{
  position:absolute; 
  width:100%;
  z-index:0;
  padding-bottom:50px;
  background:#f2f2f2;
  .share-top{
  	width:100%;
  	height:130px;
  	background:#ffc;
  	margin-bottom:8px;
  }
  .share-top-tab{
  	borderbottom-1px($grey)
  	flex-between()
  	background:#fff;
  	padding:0 15px;
  	.share-top-tab-item{
  		flex:1;
  		text-align:center;
  		.share-top-tab-item-text{
  			display:inline-block;
  			line-height:43px;
  			height:43px;
	  		font-size:14px;
	  		color:#666666;
  		}
  	}
  	.share-top-tab-item-active{
  			z-index:100;
  		.share-top-tab-item-text{
  			color:$red;
  			border-bottom:2px solid $red;
  		}
  	}
  }
  .share-goods-list{
  	width:100%;
	  .share-goods-item{
	  	width:100%;
	  	height:120px;
	  	padding:0 15px;
	  	background:#fff;
	  	.share-goods-item-content{
	  		borderbottom-1px($grey)
	  		width:100%;
	  		height:120px;
	  		padding:15px 0;
	  		display:flex;
		  	justify-content:space-between;
		  	align-items:center;
	  		.share-goods-item-pic{
	  			position:relative;
	  			width:90px;
	  			height:90px;
	  			background-image:url(../../common/image/share/img40.png);
		      background-position:center;
		      background-size:100%;
		      background-repeat:no-repeat;
		      .share-goods-item-pic-new{
		      	position:absolute;
		      	left:0;
		      	top:0;
		      	width:15px;
		      	height:18px;
		      	background-image:url(../../common/image/share/new.png);
			      background-position:center;
			      background-size:100%;
			      background-repeat:no-repeat;
		      }
	  		}
	  		.share-goods-item-right{
	  			width:calc(100% - 105px);
	  			height:80px;
	  			display:flex;
	  			flex-direction:column;
			  	justify-content:space-between;
			  	align-items:center;
	  			.share-goods-item-right-top{
	  				width:100%;
	  				font-size:13px;
	  				color:#000;
	  				line-height:16px;
	  				overflow: hidden;
			      text-overflow: ellipsis;
			      -webkit-box-orient: vertical;
			      display: -webkit-box;
			      -webkit-line-clamp: 2;
	  			}
	        .share-goods-item-right-bottom{
	        	width:100%;
	        	display:flex;
				  	justify-content:space-between;
				  	align-items:center;
	          .share-goods-item-right-bottom-left{
	          	position:relative;
	          	top:6px;
	          	font-size:12px;
	          	color:#999999;
	          }
	          .share-goods-item-right-bottom-right{
	          	width:63px;
	          	height:24px;
	          	line-height:24px;
	          	font-size:12px;
	          	color:#fff;
	          	background:$red;
	          	text-align:center;
	          }
	          .share-goods-item-right-bottom-right-has{
	          	width:63px;
	          	height:24px;
	          	line-height:24px;
	          	font-size:12px;
	          	color:#fff;
	          	background:#999999;
	          	text-align:center;
	          }
	        }
	  		}
	  	}
	  	&:last-child{
	  		.share-goods-item-content:after{
	  			border-top:none;
	  		}
	  	}
	  }
  }
}